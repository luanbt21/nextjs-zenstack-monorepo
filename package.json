{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:backend": "turbo run build --filter=backend",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "db:generate": "turbo run db:generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "5.7.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
